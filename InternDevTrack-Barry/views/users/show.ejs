<div class="user-data">
  <h1>User Data for <%= user.fullName %></h1>
  <table>
    <tr>
      <th>Name</th>
      <td><%= user.fullName %></td>
    </tr>
    <tr>
      <th>Email</th>
      <td><%= user.email %></td>
    </tr>
    <tr>
      <th>Zip Code</th>
      <td><%= user.zipCode %></td>
    </tr>
    <tr>
      <th>Password</th>
      <td><%= user.password %></td>
    </tr>
  </table>
</div>

<div class="user-data-links">
  <a href="/users">View all users</a>
  <a href="<%=`/users/${user._id}/edit`%>">Edit User Details</a>
  <a href="<%=`/users/${user._id}/label`%>">Manage User Labels</a>
  <a href="<%= `/users/${user._id}/delete?_method=DELETE` %>"
      onclick="return confirm('Are you sure you want to delete this record?')">Delete</a>
</div>